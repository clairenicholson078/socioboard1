@{
    string path = "Socioboard";
    Layout = "~/Themes/" + path + "/Views/Shared/_SocioboardLayout.cshtml";
}

<div class="container">
    <div class="row margin-top-30">
        <h4 class="center-align Righteous_font grey-text text-darken-2">Socioboard source code is available to download through various sites. Please click respective links to download:</h4>
        <div class="col s12 m3">
            <div class="card blue-grey darken-1 center-align">
                <div class="card-content white-text">
                    <span class="card-title">GitHub</span><br>
                    <i class="fa fa-github fa-5x"></i>
                </div>
                <div class="card-action">
                    <a href="https://github.com/socioboard/socioboard" target="_blank">This is a link</a>
                </div>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="card blue-grey darken-1 center-align">
                <div class="card-content white-text">
                    <span class="card-title">Github Master</span><br>
                    <i class="fa fa-github-alt fa-3x"></i>
                    <p>(Direct Download)</p>
                </div>
                <div class="card-action">
                    <a href="https://github.com/socioboard/socioboard/archive/v2.0.16.zip">This is a link</a>
                </div>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="card blue-grey darken-1 center-align">
                <div class="card-content white-text">
                    <span class="card-title">Codeplex</span><br>
                    <i class="fa fa-code fa-5x"></i>
                </div>
                <div class="card-action">
                    <a href="https://socioboard.codeplex.com/downloads/get/1442000">This is a link</a>
                </div>
            </div>
        </div>
        <div class="col s12 m3">
            <div class="card blue-grey darken-1 center-align">
                <div class="card-content white-text">
                    <span class="card-title">Enterprise</span><br>
                    <i class="fa fa-sign-in fa-5x"></i>
                </div>
                <div class="card-action">
                    <a href="Enterprise">This is a link</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col m12 ">
            <h4 class="center-align Righteous_font grey-text text-darken-2">Want to get a professional installation done by our expert team at almost no cost?<br>Click the button below:</h4>
            <div class="col s12 m4 offset-m4">
                <div class="card blue-grey darken-1 center-align">
                    <div class="card-content white-text">
                        <span class="card-title">Professional</span><br>
                        <i class="fa fa-download fa-5x"></i>
                    </div>
                    <div class="card-action">
                        <a href="#RequestForDemo" class="modal-trigger">Request For Demo</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 <!-- Request For Demo Modal -->
<div id="RequestForDemo" class="modal modal-fixed-footer" style="width: 600px;">
    <form onsubmit="CreateDemoReq(); return false;"  class="col s12 form form-validate floating-label">
        <div class="modal-content">
            <h4>REQUEST FOR DEMO</h4>
            <div class="row">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="req_first_name" name="req_first_name" type="text" required class="validate" pattern="^[a-zA-Z0-9]+$">
                        <label for="req_first_name">First Name</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="req_last_name" name="req_last_name" type="text" required class="validate" pattern="^[a-zA-Z0-9]+$">
                        <label for="req_last_name">Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="EmailId" name="EmailId" type="email" required class="validate" pattern="^([a-zA-Z0-9_\-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$">
                        <label for="EmailId" data-error="wrong" data-success="right">Business Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="req_Company" name="req_Company" type="text" class="validate">
                        <label for="req_Company">Company</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="req_phone" type="text" class="validate" maxlength="10" pattern="[0-9]{10}">
                        <label for="req_phone" data-error="PhoneNumber" data-success="right">phone</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="req_skype" type="text" class="validate">
                        <label for="req_skype">skype</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
             @*<div id="ImgLoading" class="btn btn-flat btn-primary ink-reaction hide"> <img class='img-portfolio img-responsive right' src='~/contents/socioboard/images/loading-spinner-grey.gif'></div>*@
            <button id="submitButton" type="submit"  class="btn btn-flat btn-primary ink-reaction">Submit</button>
        </div>
    </form>
</div>

@section Scripts{
    <script>
        function CreateDemoReq()
        {
            var firstName = $('#req_first_name').val();
            var lastName = $('#req_last_name').val();
            var email = $('#EmailId').val();
            var company = $('#req_Company').val();
            var Phone = $('#req_phone').val();
            var skype = $('#req_skype').val();

            $.ajax({

                type: "POST",

                url: "@ViewBag.ApiDomain/api/user/DemoRequest",

                data: { "firstName": firstName, "lastName": lastName, "company": company, "emailId": email, "phoneNumber": Phone, "skype": skype, "demoPlanType": "Professional" },

                //contentType: "application/json; charset=utf-8",

                dataType: "html",

                success: function (msg) {

                    alertify.set({ delay: 5000 });
                    alertify.success("Request Sent Successfully");
                    $('#req_first_name').val("");
                    $('#req_last_name').val("");
                    $('#req_Business_Email').val("");
                    $('#req_Company').val("");
                    $('#req_phone').val("");
                    $('#req_skype').val("");
                },
                error: function (msg) {
                    alertify.set({ delay: 5000 });
                    alertify.error(msg.responseText);
                    $('#ImgLoading').hide();
                    $('#submitButton').show();
                    return false;
                }
            });
            $('#ImgLoading').hide();
            $('#submitButton').show();
            return false;
        }
    </script>

}
